<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:padding="3dp">
    <!-- Whole box-->
    <LinearLayout
        android:id="@+id/whole_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/booking_layout_bg"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/top_left_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/class_type_own"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/own_activity_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="Eget träninspass"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/small_clock_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="3dp">

                    <ImageView
                        android:id="@+id/booking_time_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="0"
                        android:scaleX="0.50"
                        android:scaleY="0.50"
                        android:src="@drawable/booking_ic_time" />

                    <TextView
                        android:id="@+id/own_activity_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/hours_background"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.1"
                        android:textAlignment="inherit"
                        android:textColor="@color/secondary_color"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/small_info_trainig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp">

                    <ImageView
                        android:id="@+id/class_comment_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0"
                        android:scaleX="0.45"
                        android:scaleY="0.45"
                        android:src="@drawable/ic_comment" />

                    <TextView
                        android:id="@+id/class_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/hours_background"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.1"
                        android:text="0 kommentar"
                        android:textAlignment="inherit"
                        android:textColor="@color/secondary_color"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/top_right_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/progressbar_nmi_primary"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/details"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="3.5dp"
            android:layout_marginRight="3.5dp"
            android:alpha="0.5"
            android:background="@drawable/top_divider"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_box"
            android:layout_width="fill_parent"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/pressed_state_button_cp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/bottom_left_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/left_inner_box"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_calender"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_calender" />

                    <TextView
                        android:id="@+id/text_add_calender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lägg till i kalender"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="11dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/mid_divider"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_right_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/right_inner_box"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_more"
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_more" />

                    <TextView
                        android:id="@+id/text_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_toRightOf="@id/ic_more"
                        android:gravity="right"
                        android:text="Träningsprogram"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="11dp" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <!--Whole box-->
</LinearLayout>